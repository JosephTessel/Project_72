<% unless user == current_user %>
  <% if current_user.following?(@event) %>
    <%= button_to("Un-Follow #{@event.title}", user_follow_path(user.to_param, current_user.get_follow(user).id), :method => :delete, :remote => true) %>
  <% else %>
    <%= button_to("Follow #{user.nickname}", user_follows_path(user.to_param), :remote => true) %>
  <% end %><% end %>
